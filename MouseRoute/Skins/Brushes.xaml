<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MouseRoute">
    <RadialGradientBrush x:Key="OffGradientBrush"
                         GradientOrigin="0.7,0.3">
        <GradientStop Color="#FFBCC19D"
                      Offset="0.987" />
        <GradientStop Color="White"
                      Offset="0" />
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="OnGradientBrush"
                         GradientOrigin="0.7,0.3">
        <GradientStop Color="{DynamicResource MainForegroundColor}"
                      Offset="1" />
        <GradientStop Color="White"
                      Offset="0" />
    </RadialGradientBrush>
    <LinearGradientBrush x:Key="BackgroundBrush"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="#FF050505"
                      Offset="0.039" />
        <GradientStop Color="#FF4E4E4E"
                      Offset="0.436" />
        <GradientStop Color="#FF484848"
                      Offset="0.607" />
        <GradientStop Color="#FF010101"
                      Offset="0.987" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="TextBrush"
                     Color="{DynamicResource MainForegroundColor}" />
    <SolidColorBrush x:Key="BackBrush"
                     Color="#FF45463D" />

</ResourceDictionary>